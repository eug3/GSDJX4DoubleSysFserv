<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GSDJX4DoubleSysFserv.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:GSDJX4DoubleSysFserv.Views"
    Title="GSDJX4DoubleSysFserv">

    <FlyoutItem
        Title="微信读书"
        Icon="book.png">
        <ShellContent
            Title="微信读书"
            ContentTemplate="{DataTemplate views:WeReadPage}"
            Route="WeReadPage" />
    </FlyoutItem>

    <FlyoutItem
        Title="设置"
        Icon="settings.png">
        <ShellContent
            Title="设置"
            ContentTemplate="{DataTemplate views:SettingsPage}"
            Route="SettingsPage" />
    </FlyoutItem>
    <FlyoutItem
        Title="继续上次阅读"
        Icon="epd.png">
        <ShellContent
            Title="继续上次阅读"
            ContentTemplate="{DataTemplate views:EPDReadingPage}"
            Route="EPDReadingPage" />
    </FlyoutItem>
</Shell>
